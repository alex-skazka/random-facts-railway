{
  "manifest_version": 3,
  "name": "Daily Facts",
  "version": "1.0.0",
  "description": "Get interesting facts delivered daily to expand your knowledge",
  "permissions": ["storage", "notifications", "alarms", "contextMenus"],
  "host_permissions": ["https://*.vercel.app/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Daily Facts",
    "default_icon": {
      "16": "icon16.png",
      "32": "icon32.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "options_page": "options.html",
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
